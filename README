cd /home/dikey/sdk/buildroot
make O=out_beaglebone_qt5 beaglebone_qt5_defconfig
make O=out_beaglebone_qt5 menuconfig
make -j4 O=out_beaglebone_qt5 2>&1 | tee ./out_beaglebone_qt5.log

